CREATE TABLE SLAVE(
    sNo NUMBER(30) NOT NULL,
    sName VARCHAR2(30) NOT NULL,
    sEmail VARCHAR2(50) NOT NULL,
    sPwd VARCHAR2(100) NOT NULL
);

CREATE TABLE BOARD(
    bNo NUMBER(30) NOT NULL,
    sNo NUMBER(30) NOT NULL,
    bTitle VARCHAR2(50) NOT NULL,
    bContents VARCHAR2(500) NOT NULL,
    bCreateAt DATE DEFAULT SYSDATE,
    bViews NUMBER(30) DEFAULT 0
);

ALTER TABLE SLAVE
ADD CONSTRAINT SLAVE_SNO_PK PRIMARY KEY(SNO);

ALTER TABLE SLAVE
ADD CONSTRAINT SLAVE_SEMAIL_PK UNIQUE(SEMAIL);

ALTER TABLE BOARD
ADD CONSTRAINT BOARD_BNO_PK PRIMARY KEY(SNO);

ALTER TABLE BOARD
ADD CONSTRAINT BOARD_BNO_SLAVE_SNO_FK FOREIGN key(SNO) references SLAVE(SNO);

CREATE SEQUENCE SLAVE_sNo_SEQ
INCREMENT BY 1
    START WITH 1;
    
CREATE SEQUENCE BOARD_sNo_SEQ
INCREMENT BY 1
    START WITH 1;
    
